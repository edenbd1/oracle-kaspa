# Kaspa
KASPA_PRIVATE_KEY=<hex-encoded-testnet-private-key>
KASPA_ADDRESS=kaspatest:<your-address>
KASPA_NETWORK=testnet-10
KASPA_RPC_URL=ws://127.0.0.1:17210

# Platform private key for signing transactions (same as KASPA_PRIVATE_KEY for testnet)
PLATFORM_PRIVATE_KEY=<hex-encoded-testnet-private-key>

# CoinMarketCap (at least one required, up to 5 for load distribution)
CMC_API_KEY=<coinmarketcap-api-key-1>
CMC_API_KEY_2=<coinmarketcap-api-key-2>
CMC_API_KEY_3=<coinmarketcap-api-key-3>
CMC_API_KEY_4=<coinmarketcap-api-key-4>
CMC_API_KEY_5=<coinmarketcap-api-key-5>

# KRC-20 Configuration
# Set to 'true' to enable real on-chain KRC-20 tokens via Kasplex
# When false (default), tokens are simulated in-memory
USE_REAL_KRC20=false
# Kasplex indexer API endpoint
# Testnet-10: https://tn10api.kasplex.org
# Mainnet: https://api.kasplex.org
KASPLEX_INDEXER_API=https://tn10api.kasplex.org
